<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorites_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/inner_margin"
    android:useDefaultMargins="true"
    android:columnCount="3">

    <!-- Wiersz 1 -->
    <Button
        android:id="@+id/main_6_6_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        android:background="#FF9800"
        android:pointerIcon="context_menu"
        android:text="6 x 6"
        android:textSize="30sp"
        android:tag="6 6"
        app:icon="@drawable/ic_rocket"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="40dp" />

    <Space
        android:layout_width="wrap_content"
        android:minWidth="@dimen/inner_margin"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_4_4_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        android:background="#2196F3"
        android:pointerIcon="context_menu"
        android:text="4 x 4"
        android:textSize="30sp"
        android:tag="4 4"
        app:icon="@drawable/ic_rocket"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="40dp" />

    <!-- Wiersz 2 -->
    <Button
        android:id="@+id/main_4_6_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        android:background="#4CAF50"
        android:pointerIcon="context_menu"
        android:text="4 x 3"
        android:textSize="30sp"
        android:tag="4 3"
        app:icon="@drawable/ic_rocket"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="40dp" />

    <Space
        android:layout_width="wrap_content"
        android:minWidth="@dimen/inner_margin"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_6_4_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        android:background="#F44336"
        android:pointerIcon="context_menu"
        android:text="3 x 2"
        android:textSize="30sp"
        android:tag="3 2"
        app:icon="@drawable/ic_rocket"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="40dp" />
</GridLayout>
